<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFAFAF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/tv_tituloListaJogadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StringTelaSobreStyle"
            android:text="@string/TituloListaJogadores" />

        <ListView
            android:id="@+id/listaJogadoresEquipe"
            android:layout_width="match_parent"
            android:layout_height="346dp" >
        </ListView>

        <Button
            android:id="@+id/btNovoJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btNovoJogador" />

    </LinearLayout>

</LinearLayout>
