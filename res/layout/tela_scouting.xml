<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/bt_playpause" />

        <TextView
            android:id="@+id/cronos_tempoJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            style="@style/StringTelaSobreStyle_simple"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btTempo_1min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/bt_tempo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/listViewScouting"
            android:layout_width="140dp"
            android:layout_height="wrap_content" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btFalta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Falta" />

        <Button
            android:id="@+id/btPasse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passe" />

        <Button
            android:id="@+id/btAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arremeso" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ctAmarelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CartÃ£o abarelo" />

        <Button
            android:id="@+id/bt2min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 minutos" />

    </LinearLayout>

    <TextView
        android:id="@+id/cronos_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StringTelaSobreStyle_simple"/>

</LinearLayout>
